<h1>CART</h1>

<div id="card">
{{#if courses.length}}
<table>
    <thead>
        <tr>
            <th>Course name</th>
            <th>Ouantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btm-small js-remove" data-id="{{id}}">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><strong>Price:</strong> <span class="price">{{price}}</span></span></p>
{{else}}
<p>Cart is empty</p>
{{/if}}
</div>